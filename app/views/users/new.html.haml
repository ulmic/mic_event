.offset3.span5
  %h2
    = t('.user_registration')
  = simple_form_for @user do |f|
    - f.with_options input_html: { class: :span5 } do |f|
      .field
        = f.input :email
        = f.input :password
      = check_box_tag "privacy"
      = t('.i_agree')
      = link_to t('.license_agreement'), privacy_pages_path

    .form-actions
      = f.button :submit, t('save'), class: 'btn btn-primary', id: "submit"
      = link_to t('cancel', default: t("helpers.links.cancel")), users_path, class: 'btn'
