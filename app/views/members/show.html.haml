= stylesheet_link_tag "members"
.page-header
  %h1= @member.fio
  %h2= @member.post
.row-fluid
  .span8
    %table.table.table-striped.table-hover
      - @member.checkins.each do |checkin|
        %tr{ onclick: "return location.href = '#{event_path(checkin.event)}'" }
          %td
            =link_to checkin.event.title, event_path(checkin.event)
          %td
            = checkin.decorate.status_locale
          %td
            = checkin.description
          %td
            = checkin.event.decorate.date
    %p
    = link_to t('back'), members_path, class: 'btn'
  .span3
    - if @member.parent
      .row-fluid
        %small
          = t('parent')
      .row-fluid.parrent{ onclick: "return location.href = '#{member_path(@member.parent)}'" }
        .span3
          = image_tag @member.parent.photo.thumb, class: 'img-rounded parrent'
        .span3
          %h4
            = @member.parent.decorate.fio
      %br
    .row-fluid
      .span12
        = image_tag @member.photo
    %br
    .row-fluid
      - @member.children.each do |child|
        .span3{ onclick: "return location.href = '#{member_path(child)}'" }
          = image_tag child.photo.thumb, class: 'img-rounded'
    .row-fluid
      %h3= @member.motto
      %h3= @member.number
    - if current_member_on_page?(@member)
      %a.btn{ href: edit_member_path(@member) }
        = t('edit')
        = t('profile')
