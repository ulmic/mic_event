- model_class = Program
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:lider_id)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @programs.each do |program|
      %tr
        %td= link_to program.id, edit_admin_program_path(program)
        %td= link_to program.name, edit_admin_program_path(program)
        %td= program.lider_id
        %td= program.description
        %td=l program.created_at
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_program_path(program), class: 'btn btn-mini'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_program_path(program), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_program_path, class: 'btn btn-primary'
